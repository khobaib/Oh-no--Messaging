<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/iv_user_pp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/ic_contact_picture" />

    <TextView
        android:id="@+id/tv_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/iv_user_pp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Name"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_message_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_contact_name"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_contact_name"
        android:singleLine="true"
        android:text="240"
        android:textColor="@color/android_green"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_contact_name"
        android:layout_toLeftOf="@+id/tv_time"
        android:layout_below="@+id/tv_contact_name"
        android:layout_marginRight="5dp"
        android:layout_marginTop="-2dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Message body"
        android:textColor="@android:color/darker_gray"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_user_pp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:text="6:03PM"
        android:layout_marginBottom="2dp"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>